<div class='grid-x'>
  <div class='small-12 cell'>
    <label>
      Debug?
      <Input @type='checkbox' @checked={{this.debug}} />
    </label>

    {{#if (feature-flag 'clandestineRendezvous')}}
      <EmbeddedRendezvousMaps
        @teams={{this.model.teams}}
        @assets={{this.model.assets}}
        @debug={{this.debug}}
      />
      <EmbeddedRendezvousCards
        @teams={{this.model.teams}}
        @settings={{this.model.settings}}
        @assets={{this.model.assets}}
        @debug={{this.debug}}
      />
      <EmbeddedRendezvousAnswers
        @teams={{this.model.teams}}
        @meetings={{this.model.meetings}}
      />
    {{/if}}

    {{#if (feature-flag 'txtbeyond')}}
      <EmbeddedTxtbeyondCards
        @teams={{this.model.teams}}
        @settings={{this.model.settings}}
        @assets={{this.model.assets}}
        @debug={{this.debug}}
      />
      <EmbeddedTxtbeyondTransparencies
        @teams={{this.model.teams}}
        @settings={{this.model.settings}}
        @assets={{this.model.assets}}
        @debug={{this.debug}}
      />
    {{/if}}

    {{#if (feature-flag 'unmnemonicDevices')}}
      <EmbeddedUnmnemonicDevicesOverlays @waypoints={{this.model.waypoints}} />
    {{/if}}
  </div>
</div>