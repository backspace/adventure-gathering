<div id='scheduler'>
  <ul class='regions'>
    {{#each model.regions as |region|}}
      {{#if region.destinations}}
        <li class='region' title={{region.notes}}>
          <div class='name'>{{region.name}}</div>

          <ul class='destinations'>
            {{#each region.destinations as |destination|}}
              {{#if destination.isAvailable}}
                <li class='destination' title='A{{destination.awesomeness}} R{{destination.risk}}'>
                  <div class='description'>{{destination.description}}</div>

                  {{#if destination.accessibility}}
                    <div class='accessibility'>{{destination.accessibility}}</div>
                  {{/if}}
                </li>
              {{/if}}
            {{/each}}
          </ul>
        </li>
      {{/if}}
    {{/each}}
  </ul>

  <ul class='teams'>
    {{#each model.teams as |team|}}
      <li class='team' title={{team.users}}>
        <div class='name'>{{team.name}}</div>
      </li>
    {{/each}}
  </ul>

  {{link-to 'âŒ‚' 'index' class='home'}}
</div>
