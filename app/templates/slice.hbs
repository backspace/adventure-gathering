<div class='row'>
  <div class='small-12 columns'>
    <div class='input-group'>
      <span class='input-group-label'>String</span>
      <Input @value={{word}} />
    </div>
    <div class='input-group'>
      <span class='input-group-label'>Slices</span>
      <Input @value={{slices}} />
    </div>
    <div class='input-group'>
      <span class='input-group-label'>Debug</span>
      <Input @checked={{debug}} @type="checkbox" />
    </div>
    <div class='input-group'>
      <span class='input-group-label'>Animated</span>
      <Input @checked={{animated}} @type="checkbox" />
    </div>
  </div>
</div>
<div class='row'>
  <div class='small-12 columns'>
    <div class='nokia-string-slice'>
      <NokiaString @string={{word}} @slices={{slices}} @debug={{debug}} @animated={{animated}} />
    </div>
  </div>
</div>
