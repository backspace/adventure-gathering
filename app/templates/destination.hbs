<div class='row'>
  <div class='small-12 columns'>
    <label>
      Region
      <select onchange={{action 'setRegion' value='target.value'}} class='region'>
        <option></option>
        {{#each sortedRegions as |region|}}
          <option value={{region.id}} selected={{eq model.region.id region.id}} data-test-region-name={{region.name}}>{{region.name}}</option>
        {{/each}}
      </select>
    </label>

    <label>
      Description
      <Textarea @value={{model.description}} class="description" @rows={{4}} />
    </label>
  </div>
</div>

<div class='row'>
  <div class='small-6 columns'>
    <label>
      Answer
      <Input @value={{model.answer}} class="answer" />
    </label>
  </div>
  <div class='small-6 columns'>
    <label>
      Mask
      <div class='input-group'>
        <Input @value={{model.mask}} class="mask input-group-field" />
        {{#if model.suggestedMask}}
          <div class='input-group-button'>
            <button class='suggested-mask button default' {{action 'setMaskToSuggestion'}}>{{model.suggestedMask}}</button>
          </div>
        {{/if}}
      </div>
    </label>
  </div>
</div>

<div class='row'>
  <div class='small-10 columns'>
    <label>
      Accessibility
      <Textarea @value={{model.accessibility}} class="accessibility" />
    </label>
  </div>
  <div class='small-2 columns'>
    <label>
      Outside
      <Input @checked={{model.isOutside}} class="outside" @type="checkbox" />
    </label>
  </div>
</div>
<div class='row'>
  <div class='small-4 columns'>
    <label>
      Awesomeness
      <DraggableNumber>
        <Input @value={{model.awesomeness}} @type="number" class="awesomeness" @min={{0}} @max={{10}} @step={{0.25}} />
      </DraggableNumber>
    </label>
  </div>
  <div class='small-4 columns'>
    <label>
      Risk
      <DraggableNumber>
        <Input @value={{model.risk}} @type="number" class="risk" @min={{0}} @max={{10}} @step={{0.25}} />
      </DraggableNumber>
    </label>
  </div>
  {{#if (feature-flag 'destination-status')}}
    <div class='small-4 columns'>
      <fieldset class='status'>
        <legend>Status</legend>
        <RadioButton @value="available" @groupValue={{model.status}} @class="available"> ✓</RadioButton>
        <RadioButton @value="unavailable" @groupValue={{model.status}} @class="unavailable"> ✘</RadioButton>
        <RadioButton @value="unknown" @groupValue={{model.status}} @class="unknown"> ?</RadioButton>
      </fieldset>
    </div>
  {{/if}}
</div>
<div class='row'>
  <div class='expanded button-group'>
    <button {{action 'save' model}} class='save success button' type='button'>Save</button>
    <button {{action 'delete' model}} class='delete alert button' type='button'>Delete</button>
    <button {{action 'cancel' model}} class='cancel warning button' type='button'>Cancel</button>
  </div>
</div>
