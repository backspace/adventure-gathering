<div class='grid-x'>
  <div class='cell small-6'>
    <div class='input-group'>
      <span class='input-group-label'>Destination status</span>
      <Input @checked={{this.model.destinationStatus}} class='destination-status' @type='checkbox' />
    </div>
  </div>
</div>
<div class='grid-x'>
  <div class='cell small-3'>
    <div class='input-group'>
      <span class='input-group-label'>Clandestine Rendezvous</span>
      <Input @checked={{this.model.clandestineRendezvous}} class='clandestine-rendezvous' @type='checkbox' />
    </div>
  </div>
  <div class='cell small-3'>
    <div class='input-group'>
      <span class='input-group-label'>txtbeyond</span>
      <Input @checked={{this.model.txtbeyond}} class='txtbeyond' @type='checkbox' />
    </div>
  </div>
</div>
<div class='grid-x'>
  <div class='cell small-6'>
    <div class='input-group'>
      <span class='input-group-label'>Goal</span>
      <Input @value={{this.model.goal}} class='goal input-group-field' />
    </div>
  </div>
</div>

<button type='button' {{action 'save' this.model}} class='save button primary'>Save</button>
