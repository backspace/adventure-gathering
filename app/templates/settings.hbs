<div class='row'>
  <div class='small-12 columns'>
    <div class='input-group'>
      <span class='input-group-label'>Destination status</span>
      <Input @checked={{model.destinationStatus}} class="destination-status" @type="checkbox" />
    </div>
    <div class='input-group'>
      <span class='input-group-label'>Clandestine Rendezvous</span>
      <Input @checked={{model.clandestineRendezvous}} class="clandestine-rendezvous" @type="checkbox" />
    </div>
    <div class='input-group'>
      <span class='input-group-label'>txtbeyond</span>
      <Input @checked={{model.txtbeyond}} class="txtbeyond" @type="checkbox" />
    </div>
    <div class='input-group'>
      <span class='input-group-label'>Goal</span>
      <Input @value={{model.goal}} class="goal input-group-field" />
      <div class='input-group-button'>
        <button {{action 'save' model}} class='save button primary'>Save</button>
      </div>
    </div>
  </div>
</div>
