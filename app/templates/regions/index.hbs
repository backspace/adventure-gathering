<div class='row'>
  <div class='small-12 columns'>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each regions as |region|}}
          <tr class='region {{if region.isComplete 'complete' 'incomplete'}}'>
            <td class='name'>{{region.name}}</td>
            <td>{{link-to 'Edit' 'region' region class='edit'}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>

    {{link-to 'New' 'regions.new' class='new'}}
    {{link-to 'Map' 'regions.map' class='map'}}
  </div>
</div>
