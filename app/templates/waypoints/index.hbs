<div class="row">
  <div class="small-12 columns">
    <table>
      <thead>
        <tr>
          <th>
            Region
          </th>
          <th>
            Name
          </th>
          <th>
            Author
          </th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each this.waypoints as |waypoint|}}
          <tr
            class='waypoint {{if waypoint.isIncomplete 'incomplete'}}'
            data-test-waypoint
          >
            <td data-test-region>
              {{waypoint.region.name}}
            </td>
            <td data-test-name>
              {{waypoint.name}}
            </td>
            <td data-test-author>
              {{waypoint.author}}
            </td>
            <td>
              <LinkTo @route="waypoint" @model={{waypoint}} data-test-edit>
                Edit
              </LinkTo>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>

    <LinkTo @route="waypoints.new" data-test-waypoints-new>
      New
    </LinkTo>
  </div>
</div>