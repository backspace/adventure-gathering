<li class='team {{if isSelected 'selected'}} {{if hasMetHighlightedTeam 'highlighted'}} {{if isAhead 'ahead'}}' title={{usersAndNotes}} data-risk-aversion={{team.riskAversion}}>
  <div onclick={{action 'select'}}>
    <span class='name'>{{team.name}}</span> <span class='count'>{{count}}</span>

    <div>
      A<span class='average-awesomeness'>{{roundedAwesomeness}}</span>
      R<span class='average-risk'>{{roundedRisk}}</span>
    </div>
  </div>

  {{#if showMeetings}}
    <ul>
      {{#each team.meetings as |meeting index|}}
        <li class=meeting onclick={{action 'editMeeting' meeting}}>{{index}}</li>
      {{/each}}
    </ul>
  {{/if}}
</li>
